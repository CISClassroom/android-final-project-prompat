<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".KotlinAddActivity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#4FB4AC"
        android:fontFamily="@font/kanit_bold"
        android:paddingTop="1sp"
        android:paddingBottom="1sp"
        android:text="Add Content To Kotlin"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/editText_topic_kotlin"
        android:layout_width="322dp"
        android:layout_height="50dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="45dp"
        android:background="@drawable/textbox_input"
        android:ems="10"
        android:paddingStart="6dp"
        android:paddingTop="6dp"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <EditText
        android:id="@+id/editText_content_kotlin"
        android:layout_width="322dp"
        android:layout_height="164dp"
        android:layout_marginStart="46dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="43dp"
        android:background="@drawable/textbox_input"
        android:ems="10"
        android:paddingStart="6dp"
        android:paddingTop="6dp"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="46dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="9dp"
        android:fontFamily="@font/kanit_reg"
        android:text="Add Sub Topic :"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/editText_sub_kotlin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_topic_kotlin" />

    <EditText
        android:id="@+id/editText_sub_kotlin"
        android:layout_width="322dp"
        android:layout_height="50dp"
        android:layout_marginStart="46dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="43dp"
        android:layout_marginBottom="6dp"
        android:ems="10"
        android:paddingStart="6dp"
        android:paddingTop="6dp"
        android:background="@drawable/textbox_input"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="12dp"
        android:fontFamily="@font/kanit_reg"
        android:text="Add Topic :"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/editText_topic_kotlin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.034" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:layout_marginTop="128dp"
        android:layout_marginEnd="213dp"
        android:fontFamily="@font/kanit_reg"
        android:text="Add Content :"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_topic_kotlin" />

    <Button
        android:id="@+id/save_add_kotlin"
        android:layout_width="171dp"
        android:layout_height="45dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="49dp"
        android:layout_marginEnd="120dp"
        android:background="#4FB4AC"
        android:fontFamily="@font/kanit_bold"
        android:text="save"
        android:textColor="#FFFEFE"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_content_kotlin" />

</androidx.constraintlayout.widget.ConstraintLayout>